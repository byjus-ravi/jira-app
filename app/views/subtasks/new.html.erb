<div class="jumbotron">
<h3>Create the new Subtask </h3>
<%= link_to "Go Back", stories_path, class:"btn btn-primary" %>
</div>
<%= form_with(model: @subtask,local: true) do |f|%>
    <div class="form-group">
    <%= f.number_field :story_id ,class:"form-control",type:"hidden"%>
    </div>
    <div class="form-group">
    <%=f.label :name%><br/>
    <%=f.text_field :name ,class:"form-control"%>
    </div>
    <div class="form-group">
    <%=f.label :description%><br/>
    <%=f.text_area :description,class:"form-control"%>
    </div>
    <div class="form-group">
    <%=f.label :duedate%><br/>
    <%=f.date_field :duedate,class:"form-control"%>
    </div>
    <div class="form-group">
    <%=f.label :team%><br/>
    <%=f.text_field :team,class:"form-control"%>
    </div>
    <div class="form-group">
    <%=f.label :priority%>
    <%=f.select :priority ,[1,2,3],class:"form-control"%>
    </div>
    <div class="form-group">
    <%= f.label :status %>
    <%= f.select :status, Subtask.statuses.keys,class:"form-control" %>
   </div>
   <div class="form-group">
   <%= f.label :assignee_id %>
   <%= f.select :assignee_id, @users,class:"form-control" %>
  </div>
    <%=f.submit "Save" ,class:"btn btn-primary" %>
<%end%>