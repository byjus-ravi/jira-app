<div class="jumbotron">
<h3>Edit the epic here</h3>
<%= link_to "Go Back", epic_path(@epic) ,class:"btn btn-primary"%>
</div>
<%= form_with(model: @epic,local: true) do |f|%>
    <div class="form-group">
    <%=f.label :name%><br/>
    <%=f.text_field :name ,class:"form-control" %>
    </div>
    <div class="form-group">
    <%=f.label :summary%><br/>
    <%=f.text_area :summary ,class:"form-control" %>
    </div>
    <%=f.submit "Save",class:"btn btn-primary"%>
<%end%>